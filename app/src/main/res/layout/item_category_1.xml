<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d_120"
    android:elevation="@dimen/d_10"
    app:cardCornerRadius="@dimen/d_12"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/item_placeholder"
            android:id="@+id/ivItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:paddingHorizontal="@dimen/d_8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingVertical="@dimen/d_8"
                android:id="@+id/tvItemName"
                android:text="Product name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/ratingBar"
                android:numStars="5"
                android:rating="2"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:paddingVertical="@dimen/d_8"
                android:textColor="@color/gray_333333"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="xxx.000 Ä‘"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
