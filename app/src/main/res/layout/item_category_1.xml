<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/d_130"
    android:elevation="@dimen/d_10"
    app:cardCornerRadius="@dimen/d_12"
    android:layout_height="@dimen/d_250">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvDiscount"
            android:layout_marginStart="@dimen/d_8"
            android:padding="@dimen/d_3"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_sans_semibold"
            android:background="@drawable/btn_text_red"
            android:elevation="@dimen/d_1"
            android:text="-40%"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/item_placeholder"
                android:id="@+id/ivItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:paddingHorizontal="@dimen/d_8"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:paddingVertical="@dimen/d_8"
                    android:id="@+id/tvItemName"
                    android:text=" Product nameProduct nameProduct name"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_sans"
                    android:textColor="@color/gray_333333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar"
                    android:numStars="5"
                    android:rating="2"
                    style="@style/CustomRatingBar"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/d_5"
                    android:id="@+id/tvPrice"
                    android:paddingVertical="@dimen/d_8"
                    android:textColor="@color/gray_333333"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:text="xxx.000 Ä‘"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>
