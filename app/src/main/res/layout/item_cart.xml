<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginTop="@dimen/d_10"
    android:layout_marginHorizontal="@dimen/d_13"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivThumbnail"
        android:layout_width="@dimen/d_80"
        android:layout_height="@dimen/d_80"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_placeholder" />

    <TextView
        android:layout_marginHorizontal="@dimen/d_13"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/gray_333333"
        android:id="@+id/tvProductName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/ivDelete"
        app:layout_constraintStart_toEndOf="@id/ivThumbnail"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Điện Thoại iPhone 12 Pro Max (6GB/256GB) - Hàng Chính Hãng" />

    <ImageView
        app:srcCompat="@drawable/ic_baseline_clear_24"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/d_30"
        android:layout_height="@dimen/d_30"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_marginTop="@dimen/d_5"
        android:layout_marginHorizontal="@dimen/d_13"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/red_ff3945"
        android:id="@+id/tvPrice"
        app:layout_constraintBottom_toTopOf="@+id/counterView"
        app:layout_constraintStart_toEndOf="@id/ivThumbnail"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        android:text="69.000 đ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="@dimen/d_5"
        android:layout_marginHorizontal="@dimen/d_13"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/gray_02"
        android:id="@+id/tvListPrice"
        app:layout_constraintBottom_toTopOf="@+id/counterView"
        app:layout_constraintStart_toEndOf="@id/tvPrice"
        app:layout_constraintTop_toBottomOf="@id/tvProductName"
        android:text="69.000 đ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.tipee.widget.CounterView
        android:id="@+id/counterView"
        android:layout_marginTop="@dimen/d_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/d_13"
        app:layout_constraintStart_toEndOf="@id/ivThumbnail"
        app:layout_constraintTop_toBottomOf="@id/tvPrice" />

    <View
        android:layout_width="0dp"
        android:background="@color/gray_DADADA"
        android:layout_marginTop="@dimen/d_13"
        app:layout_constraintTop_toBottomOf="@id/counterView"
        app:layout_constraintStart_toEndOf="@id/ivThumbnail"
        android:layout_height="@dimen/d_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>