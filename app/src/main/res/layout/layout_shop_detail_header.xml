<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/dp_13"
    android:background="@color/transparent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivShopLogo"
        android:layout_width="@dimen/d_80"
        android:layout_height="@dimen/d_80"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:src="@drawable/item_placeholder" />

    <LinearLayout
        android:layout_marginStart="@dimen/d_13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/ivShopLogo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_333333"
            android:fontFamily="@font/nunito_sans_semibold"
            tools:text="TIki trading"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tvFollowNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_5"
            android:fontFamily="@font/nunito_sans"
            android:text="1k theo dÃµi"
            android:textColor="@color/gray_333333"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>
</RelativeLayout>