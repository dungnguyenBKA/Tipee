<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tipee">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".TipeeApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tipee">
        <activity android:name=".screen.shopdetail.ShopDetailActivity"></activity>
        <activity android:name=".screen.test.banner.TestBannerActivity" />
        <activity android:name=".screen.cart.CartActivity" />
        <activity android:name=".base.ErrorActivity" />
        <activity
            android:name=".screen.login.LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".widget.HtmlActivity" />
        <activity
            android:name=".screen.productdetail.ProductDetailActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".screen.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.main.PlaceHolderActivity" />
    </application>

</manifest>